{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Miztiik Automation: This template create an Amazon SQS queue with CloudWatch alarms on queue depth.",
    "Parameters": {
        "AlarmEmail": {
            "Description": "Email address to notify of operational issues",
            "Type": "String"
        }
    },
    "Resources": {
        "MyQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "ContentBasedDeduplication": true,
                "FifoQueue": true,
                "DelaySeconds": 60,
                "MaximumMessageSize": 4096,
                "MessageRetentionPeriod": 65,
                "QueueName": "Miztiik-Unicorn-App-Store-Orders-Q.fifo",
                "Tags": [
                    {
                        "Key": "Application",
                        "Value": {
                            "Ref": "AWS::StackId"
                        }
                    },
                    {
                        "Key": "Network",
                        "Value": "Public"
                    },
                    {
                        "Key": "GithubRepo",
                        "Value": "https://github.com/miztiik/cfn-challenges"
                    },
                    {
                        "Key": "LearnCdk",
                        "Value": "https://www.udemy.com/course/aws-cloud-development-kit-from-beginner-to-professional/?referralCode=E15D7FB64E417C547579&couponCode=AWS_4U_MAY"
                    },
                    {
                        "Key": "Owner",
                        "Value": "Mystique"
                    },
                    {
                        "Key": "OwnerProfile",
                        "Value": "https://github.com/miztiik"
                    },
                    {
                        "Key": "ToKnowMore",
                        "Value": "https://youtube.com/c/valaxytechnologies"
                    }
                ]
            }
        },
        "AlarmTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "Subscription": [
                    {
                        "Endpoint": {
                            "Ref": "AlarmEmail"
                        },
                        "Protocol": "email"
                    }
                ]
            }
        },
        "QueueDepthAlarm": {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmDescription": "Alarm if queue depth increases to more than 10 messages",
                "Namespace": "AWS/SQS",
                "MetricName": "ApproximateNumberOfMessagesVisible",
                "Dimensions": [
                    {
                        "Name": "QueueName",
                        "Value": {
                            "Fn::GetAtt": [
                                "MyQueue",
                                "QueueName"
                            ]
                        }
                    }
                ],
                "Statistic": "Average",
                "Period": "300",
                "EvaluationPeriods": "2",
                "Threshold": "5400",
                "ComparisonOperator": "GreaterThanOrEqualToThreshold",
                "InsufficientDataActions": [
                    {
                        "Ref": "AlarmTopic"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "LearnCDK": {
            "Description": "Stop Writing Cloudformation.Infrastructure Is Code:Learn CDK",
            "Value": "https://www.udemy.com/course/aws-cloud-development-kit-from-beginner-to-professional/?referralCode=E15D7FB64E417C547579&couponCode=AWS_4U_MAY"
        },
        "QueueURL": {
            "Description": "URL of new Amazon SQS Queue",
            "Value": {
                "Ref": "MyQueue"
            }
        },
        "QueueARN": {
            "Description": "ARN of new Amazon SQS Queue",
            "Value": {
                "Fn::GetAtt": [
                    "MyQueue",
                    "Arn"
                ]
            }
        },
        "QueueName": {
            "Description": "Name new Amazon SQS Queue",
            "Value": {
                "Fn::GetAtt": [
                    "MyQueue",
                    "QueueName"
                ]
            }
        }
    }
}